h1, h2, h3, h4, h5, h6 {
  @apply mb-2 md:mb-4;
}

.headline, h1, h2, h3, h4, h5, h6 {
  @apply hyphens-auto;
}

h1, .h1-styling {
  @apply text-3xl md:text-4xl;
}

h2, .h2-styling {
  @apply text-2xl md:text-3xl;
}

h3, .h3-styling {
  @apply text-xl md:text-2xl;
}

h4, .h4-styling {
  @apply text-xl;
}

h5, .h5-styling {
  @apply text-xl;
}