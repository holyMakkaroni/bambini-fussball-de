<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Definition services -->
        <service id="lia.article_review.config.service" class="Lia\ArticleReview\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>
        <service id="lia.article_review.email.review.service" class="Lia\ArticleReview\Service\ReviewService">
            <argument type="service" id="order.repository" />
            <argument type="service" id="lia.article_review.config.service" />
        </service>

        <!-- Subscriber -->
        <service id="Lia\ArticleReview\Subscriber\CheckoutSubscriber">
            <argument type="service" id="request_stack" />
            <argument type="service" id="order.repository" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Lia\ArticleReview\Subscriber\OrderSubscriber">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="lia.article_review.config.service" />
            <argument type="service" id="order.repository" />
        </service>

        <!-- Scheduled task -->
        <service id="Lia\ArticleReview\Service\ScheduledTask\ArticleReviewEmailTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Lia\ArticleReview\Service\ScheduledTask\ArticleReviewEmailTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="lia.article_review.email.review.service" />
            <tag name="messenger.message_handler" />
        </service>

        <!-- Console commands -->
        <service id="Lia\ArticleReview\Command\ArticleReviewEmailCommand">
            <argument type="service" id="Lia\ArticleReview\Service\ScheduledTask\ArticleReviewEmailTaskHandler" />
            <tag name="console.command"/>
        </service>
    </services>
</container>